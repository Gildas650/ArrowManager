<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.arrowm.arrowm.Activities.RoundAct">

    <LinearLayout
        android:id="@+id/linearheader"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/Grey"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="3dp"
            android:text="@string/round_page"
            android:textAlignment="center"
            android:textColor="@color/darkGrey"
            android:textSize="16sp"
            android:textStyle="normal|bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearheader"
        android:background="@color/colorAppBlue"
        android:text="@string/title_stat"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/title1"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="2dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total :"
            android:textColor="@color/darkGrey"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="2dp"
            android:text="000"
            android:textColor="@color/darkGrey" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vo :"
            android:textColor="@color/darkGrey"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/vol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="2dp"
            android:text="00"
            android:textColor="@color/darkGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moy :"
            android:textColor="@color/darkGrey"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/moy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="0,00"
            android:textColor="@color/darkGrey" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 :"
            android:textColor="@color/darkGrey"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nb10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="00"
            android:textColor="@color/darkGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 :"
            android:textColor="@color/darkGrey"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nb9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="00"
            android:textColor="@color/darkGrey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8 :"
            android:textColor="@color/darkGrey"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/nb8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="2dp"
            android:text="00"
            android:textColor="@color/darkGrey" />

    </LinearLayout>

    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear2"
        android:background="@color/colorAppBlue"
        android:text="@string/title_score"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title2"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/s1b"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Serie 1 :"
            android:textAllCaps="false"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:text="000"
            android:textColor="@color/darkGrey" />

        <Button
            android:id="@+id/s2b"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Serie 2 :"
            android:textAllCaps="false"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/s2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:text="000"
            android:textColor="@color/darkGrey" />

        <Button
            android:id="@+id/s3b"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Serie 3 :"
            android:textAllCaps="false"
            android:textColor="@color/darkGrey"
            android:textSize="12sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/s3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:text="000"
            android:textColor="@color/darkGrey" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linear3"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/instantScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00"
            android:textAlignment="textEnd"
            android:textColor="@color/darkGrey"
            android:textSize="36sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/linear3"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <HorizontalScrollView
            android:id="@+id/scrlScore"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TableRow
                    android:id="@+id/aRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Fleches"
                        android:textStyle="normal|bold"
                        android:textColor="@color/darkGrey" />

                </TableRow>

                <TableRow
                    android:id="@+id/sumR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0dp"
                        android:text="Volées"
                        android:textColor="@color/darkGrey"
                        android:textStyle="normal|bold" />


                </TableRow>

            </TableLayout>


        </HorizontalScrollView>

        <ImageButton
            android:id="@+id/cancelA"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ret" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/linearRet"
        android:layout_height="40dp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="false">

        <Button
            android:id="@+id/returnc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Retour"
            android:textColor="@color/darkGrey" />
    </LinearLayout>

    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear5"
        android:background="@color/colorAppBlue"
        android:text="@string/title_impact"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/title3"
        android:layout_above="@+id/linearRet"
        android:layout_alignParentLeft="false">

        <fr.arrowm.arrowm.Business.touchableImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/targetface"
            android:layout_gravity="center_horizontal" />
    </FrameLayout>

</RelativeLayout>
